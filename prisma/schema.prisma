generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())  @db.VarChar(36)
  isBusiness   Boolean    @default(false)  // true이면 회사 등록된 유저
  businessName String?    @db.Text         // 등록된 회사 이름
  businessCa   String?    @db.Text         // 등록된 회사 Contract Account 
  createdAt    DateTime   @default(now()) @db.Timestamp(0)
  address      String     @db.VarChar(255) @unique  // 지갑 주소
  rwa          Rwa[]  // 소유한 rwa들의 id
  purchases    Purchase[] 

  @@map("User")
}

model Rwa {
  id         String     @id @default(uuid()) @db.VarChar(36)
  maindId    Int
  subId      Int
  tokenUri   String     @db.VarChar(255)
  name       String     @db.VarChar(255)
  createdAt  DateTime   @default(now()) @db.Timestamp(0)
  amount     Int
  company    String     @db.VarChar(255)
  network    String     @db.VarChar(255)
  user       User       @relation(fields: [userId], references: [id])
  userId     String     @db.VarChar(36)
  ipfs       Ipfs?      @relation(fields: [ipfsId], references: [id])
  ipfsId     String?    @db.VarChar(36)
  soldAmount Int
  rewards    Reward[] 
  purchases  Purchase[] 

  @@map("Rwa")
}

model Ipfs {
  id           String    @id @default(uuid()) @db.VarChar(36)
  createdAt    DateTime  @default(now()) @db.Timestamp(0)
  amount       Int
  type         String    @db.VarChar(255)
  country      String    @db.VarChar(255)
  company      String    @db.VarChar(255)
  name         String    @db.VarChar(255)
  price        Int
  description  String    @db.Text
  uri          String    @db.VarChar(255)
  builder      String    @db.VarChar(255)
  weight       Int
  expectedDate DateTime  @db.Timestamp(0)
  imoNumber    Int
  expiration   DateTime  @db.Timestamp(0)
  dueDate      DateTime  @db.Timestamp(0)
  rwa          Rwa[] //sql 쿼리와 다른점

  @@map("Ipfs")
}

model Reward {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now()) @db.Timestamp(0)
  businessName String   @db.VarChar(255)
  address      String   @db.VarChar(255)
  reward       String   @db.VarChar(255)
  rwa          Rwa      @relation(fields: [rwaId], references: [id]) //sql 쿼리와 다른점 foreign key?
  rwaId        String   @db.VarChar(36)

  @@map("Reward")
}

model Purchase {
  id          Int      @id @default(autoincrement())
  tokenAmount Int
  rwa         Rwa      @relation(fields: [rwaId], references: [id])
  rwaId       String   @db.VarChar(36)
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @db.VarChar(36)

  @@map("Purchase")
}
